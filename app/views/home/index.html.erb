<div class="homepage">
  <div class='form-upload'>
    <%= render 'upload_form' %>
  </div>
  <% flash.each do |_type, msg| %>
    <div class="alert alert-info"><%= msg %></div>
  <% end %>
  <div class="posts">
    <% @posts.each do |post| %>
      <%= render partial: 'post', locals: { post: post } %>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
