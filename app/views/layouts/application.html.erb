
<!DOCTYPE html>
<html>
<head>
  <title>AutoLikeGram</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<!--Navigation Bar-->
<nav class="navbar navbar-light bg-light d-flex">
  <div class="container">
    <div class="logo">
      <a class="navbar-brand" href="<%= root_path %>">
        <%= fa_stacked_icon "camera inverse", base: "circle"%>
        Instagram
      </a>
    </div>

    </div>
    <div class="user-section">
      <a><i class="fa fa-compass"></i></a>
      <a><i class="fa fa-heart"></i></a>
      <% if user_signed_in? %>
        <a href="<%= user_path(current_user)%>"><i class="fa fa-user"></i></a>
        <%= link_to "Sign Out" , destroy_user_session_path,method: :delete%>
      <% else %>
        <a href="<%= new_user_session_path%>">
          <i class="fa fa-sign-in"></i>
        </a>
      <% end %>
    </div>
  </div>
</nav>

<!--Main content-->
<main class="container" style="min-height: 500px;">
  <%= yield %>
</main>

<!--Footer-->
<footer class="container footer">
  <nav class="navbar d-flex ">
    <p> Â© 2021 AUTO-LIKE-GRAM </p>
  </nav>
</footer>
</body>
</html>I